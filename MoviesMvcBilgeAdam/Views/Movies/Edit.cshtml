@using System.Web.UI.WebControls
@model Movies

@{
    ViewBag.Title = "Edit Movie";
    SelectList yearSelectList = ViewBag.Years as SelectList;
    MultiSelectList directorMultiSelectList = ViewBag.Directors as MultiSelectList;
}

<h2>@ViewBag.Title</h2>

