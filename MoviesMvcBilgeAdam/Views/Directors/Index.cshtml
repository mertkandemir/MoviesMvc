@model DirectorsIndexViewModel

@{
    ViewBag.Title = "Directors";
}

<h2></h2>
<h2>Directors</h2>

<p>
    @Html.ActionLink("Create New Director", "Create")
</p>

@if (TempData["Successful"] != null)
{
    <label class="text-success">@TempData["Successful"]</label>
}

@if (Model.Directors != null && Model.Directors.Count > 0)
 {

    <table class="table">
        <tr>
            <th>
                @*Name*@
                @Html.DisplayNameFor(model => model.Directors.FirstOrDefault().Name)  @*Listenin ilk elemanını al o elemanın Name özelliğini kullan *@
            </th>
            <th>
                @*Surname*@
                @Html.DisplayNameFor(model => model.Directors.FirstOrDefault().Surname) @*Listenin ilk elemanını al o elemanın Surname özelliğini kullan *@
            </th>
            <th>
                @*Retired*@
                @Html.DisplayNameFor(model => model.Directors.FirstOrDefault().RetiredText) @*Listenin ilk elemanını al o elemanın RetiredText özelliğini kullan *@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Directors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RetiredText)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
 }
